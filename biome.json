{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",

              ":PACKAGE:",
              ":BLANK_LINE:",

              ["@/**", "!**/*.css", "!**/*.json", "!**/*.scss"],
              ":BLANK_LINE:",

              ["../**", "!**/*.css", "!**/*.json", "!**/*.scss"],
              ":BLANK_LINE:",

              ["./**", "!**/*.css", "!**/*.json", "!**/*.scss"],
              ":BLANK_LINE:",

              ["**/*.css", "**/*.scss"],
              ":BLANK_LINE:",

              "**/*.json"
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedKeys": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/.next", "!**/node_modules"]
  },
  "formatter": {
    "attributePosition": "auto",
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "error"
      },
      "nursery": {
        "useSortedClasses": "warn"
      },
      "recommended": true,
      "style": {
        "useTemplate": "off"
      }
    }
  },
  "vcs": { "clientKind": "git", "enabled": false, "useIgnoreFile": true }
}
